{
  "manifest_version": 3,
  "name": "ESafety YouTube Guardian",
  "version": "1.0.0",
  "description": "Real-time safety analysis for YouTube content",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["icons/shield.png"],
    "matches": ["*://*.youtube.com/*"]
  }]
}
