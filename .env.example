# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/esafety-threat-detection

# AI Services (Choose one or use multiple for redundancy)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Content Analysis
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Analytics (Optional)
ENABLE_ANALYTICS=false
ANALYTICS_KEY=

# Cache Configuration
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=false

# Video Analysis (Optional)
# YouTube Data API for comments - Get from: https://console.cloud.google.com/
YOUTUBE_API_KEY=

# Custom temp directory for video processing
TEMP_DIR=./temp
